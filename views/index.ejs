<% layout('layout') -%>
<div class="list-group col-12">
    <% rooms.forEach(room => { %>
        <a href="/rooms/<%= room.id %>" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= room.name %></h5>
            </div>
            By <small><small class="text-info"><%= room.authorUsername %></small></small>
        </a>
    <% }) %>
</div>
<br>
<p>Or create your own, <%= user.username %>:</p>
<form class="row row-cols-lg-auto g-3 align-items-center" method="post" action="/rooms">
    <div class="col-12">
        <input type="text" class="form-control" placeholder="name" name="name" required>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<%- quote.h %>
