<% layout('layout') -%>
<div class="list-group col-12">
    <% rooms.forEach(room => { %>
        <a href="/rooms/<%= room.id %>" class="list-group-item list-group-item-action"> <%= room.name %> </a>
    <% }) %>
</div>
<br>
<p>Or create your own:</p>
<form class="row row-cols-lg-auto g-3 align-items-center" method="post" action="/rooms">
    <div class="col-12">
        <input type="text" class="form-control" placeholder="name" name="name" required>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<%- quote.h %>
